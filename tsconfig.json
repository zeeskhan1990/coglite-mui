{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "outDir": "dist"
  },
  "include": ["src", "typings", "fuse.ts", "./storybook/views"],
  "exclude": [
    "node_modules"
  ]
}
